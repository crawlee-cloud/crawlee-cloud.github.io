# Crawlee Cloud - Security Headers
# https://crawlee.cloud
# Applied by Cloudflare Pages / Netlify

/*
  # HSTS - Force HTTPS for 1 year
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Prevent clickjacking
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # XSS Protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy (disable unnecessary APIs)
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()

  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
